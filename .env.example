# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_WS_URL=http://localhost:8080

# App Configuration
NEXT_PUBLIC_APP_NAME=Arannati Shop
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Features flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# File upload limits (in MB)
NEXT_PUBLIC_MAX_FILE_SIZE=5
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Pagination
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=12
NEXT_PUBLIC_CATALOG_PAGE_SIZE=24

# SEO
NEXT_PUBLIC_DEFAULT_LOCALE=ru
NEXT_PUBLIC_SITE_DESCRIPTION=Интернет-магазин профессиональной косметики Arannati

# Development
NODE_ENV=development